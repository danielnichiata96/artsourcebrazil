---
import Layout from '../layouts/Layout.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import Link from '../components/ui/Link.astro';

const site = Astro.site ?? new URL('http://localhost:4321');
const canonicalUrl = new URL(Astro.url.pathname, site).href;
const seo = {
  title: 'Post a Job â€” ArtSource Brazil',
  description:
    "Reach Brazil's top creative talent in Game Dev, 3D & Animation, and UI/UX. Post your remote role in minutes.",
  image: new URL('/images/og-default.svg', site).href,
  url: canonicalUrl,
};
// Safe fallbacks for envs so builds don't fail if not configured yet
const paymentLink = import.meta.env.PUBLIC_STRIPE_PAYMENT_LINK ?? '#';
const jobFormUrl = import.meta.env.PUBLIC_JOB_FORM_URL ?? '#';
---

<Layout seo={seo}>
  <main class="container mx-auto px-container py-12">
    <Card variant="elevated" padding="lg" class="mx-auto max-w-3xl text-center">
      <h1 class="mb-4 text-4xl font-extrabold text-neutral-900">Post Your Job Opportunity</h1>
      <p class="mb-8 text-lg text-neutral-600">
        Connect with Brazil's top creative talent in Game Dev, 3D, and Design.
      </p>

      <div class="mb-8 rounded-lg border-l-4 border-accent bg-accent-light p-6">
        <p class="text-2xl font-bold text-neutral-900">$99 USD</p>
        <p class="mt-2 text-neutral-700">
          Your job post will be featured for 30 days, reaching a dedicated community of
          professionals.
        </p>
      </div>

      <Button
        href={paymentLink}
        size="lg"
        class="w-full"
        aria-label="Proceed to Payment and Post Job"
      >
        Proceed to Payment & Post Job
      </Button>

      <p class="mt-6 text-xs text-neutral-600">
        After a successful payment, you will be redirected to a simple form to submit your job
        details. It's fast and easy. If not redirected, you can open the form here:
        <Link href={jobFormUrl} target="_blank" rel="noopener noreferrer">Submit Job Details</Link>.
      </p>
    </Card>
  </main>
</Layout>
