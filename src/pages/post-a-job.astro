---
import '../styles/global.css';

const site = Astro.site ?? new URL('http://localhost:4321');
const canonicalUrl = new URL(Astro.url.pathname, site).href;
const seo = {
  title: 'Post a Job â€” ArtSource Brazil',
  description:
    "Reach Brazil's top creative talent in Game Dev, 3D & Animation, and UI/UX. Post your remote role in minutes.",
  image: new URL('/images/og-default.svg', site).href,
  url: canonicalUrl,
};
// Safe fallbacks for envs so builds don't fail if not configured yet
const paymentLink = import.meta.env.PUBLIC_STRIPE_PAYMENT_LINK ?? '#';
const jobFormUrl = import.meta.env.PUBLIC_JOB_FORM_URL ?? '#';

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{seo.title}</title>
    <meta name="description" content={seo.description} />
    <link rel="canonical" href={seo.url} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:url" content={seo.url} />
    <meta property="og:image" content={seo.image} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={seo.title} />
    <meta name="twitter:description" content={seo.description} />
    <meta name="twitter:image" content={seo.image} />
  </head>
  <body class="bg-gray-100 font-sans text-gray-900">
    <header class="sticky top-0 z-10 bg-white shadow-sm">
      <nav class="container mx-auto flex items-center justify-between px-6 py-4">
        <a href="/" class="text-2xl font-bold text-gray-800 transition-colors hover:text-blue-600"
          >ArtSource Brazil</a
        >
        <a
          href="/post-a-job"
          class="rounded-lg bg-blue-600 px-5 py-2 font-semibold text-white shadow-sm transition-all duration-300 hover:bg-blue-700"
          >Post a Job</a
        >
      </nav>
    </header>

    <main class="container mx-auto px-6 py-12">
      <div
        class="mx-auto max-w-3xl rounded-xl border border-gray-200 bg-white p-10 text-center shadow-lg"
      >
        <h1 class="mb-4 text-4xl font-extrabold text-gray-800">Post Your Job Opportunity</h1>
        <p class="mb-8 text-lg text-gray-600">
          Connect with Brazil's top creative talent in Game Dev, 3D, and Design.
        </p>

        <div class="mb-8 rounded-r-lg border-l-4 border-blue-500 bg-blue-50 p-6">
          <p class="text-2xl font-bold text-blue-800">$99 USD</p>
          <p class="mt-2 text-blue-700">
            Your job post will be featured for 30 days, reaching a dedicated community of
            professionals.
          </p>
        </div>

        <a
          href={paymentLink}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block w-full rounded-lg bg-blue-600 px-8 py-4 text-center text-lg font-bold text-white shadow-md transition-all duration-300 hover:bg-blue-700"
        >
          Proceed to Payment & Post Job
        </a>

        <p class="mt-6 text-xs text-gray-500">
          After a successful payment, you will be redirected to a simple form to submit your job
          details. It's fast and easy. If not redirected, you can open the form here:
          <a class="text-blue-700 underline" href={jobFormUrl} target="_blank" rel="noopener noreferrer">Submit Job Details</a>.
        </p>
      </div>
    </main>

    <footer class="mt-12 border-t bg-white py-6 text-center text-gray-500">
      <p>&copy; {new Date().getFullYear()} ArtSource Brazil. All rights reserved.</p>
    </footer>
  </body>
</html>
