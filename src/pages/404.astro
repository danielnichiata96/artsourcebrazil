---
import Layout from '../layouts/Layout.astro';
import Button from '../components/ui/Button.astro';

const seo = {
  title: '404 — Page Not Found | Art Source Brazil',
  description: "The page you're looking for doesn't exist or has been moved.",
};
---

<Layout seo={seo}>
  <main class="container mx-auto px-container py-section">
    <div class="flex flex-col items-center justify-center text-center">
      <h1 class="text-6xl font-bold text-neutral-900">404</h1>
      <p class="mt-4 text-2xl font-semibold text-neutral-600">Página não encontrada</p>
      <p class="mt-2 text-neutral-500">
        Essa página não existe. Que tal voltar pro início?
      </p>
      <div class="mt-8 flex flex-wrap justify-center gap-4">
        <Button href="/">Voltar pro início</Button>
        <Button href="/blog" variant="outline">Ver blog</Button>
      </div>

      <div class="mt-12 text-left">
        <h2 class="mb-4 text-xl font-semibold text-neutral-900">Categorias populares</h2>
        <div class="flex flex-wrap justify-center gap-3">
          <a
            href="/category/engineering-code"
            class="rounded-full border border-neutral-300 px-4 py-2 text-sm text-neutral-700 transition-colors hover:border-primary hover:text-primary"
          >
            Engenharia & Código
          </a>
          <a
            href="/category/art-animation"
            class="rounded-full border border-neutral-300 px-4 py-2 text-sm text-neutral-700 transition-colors hover:border-primary hover:text-primary"
          >
            Arte & Animação
          </a>
          <a
            href="/category/design-product"
            class="rounded-full border border-neutral-300 px-4 py-2 text-sm text-neutral-700 transition-colors hover:border-primary hover:text-primary"
          >
            Design & Produto
          </a>
          <a
            href="/category/production"
            class="rounded-full border border-neutral-300 px-4 py-2 text-sm text-neutral-700 transition-colors hover:border-primary hover:text-primary"
          >
            Produção
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
