---
import { getCollection } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';
import Card from '../../../components/ui/Card.astro';
import Link from '../../../components/ui/Link.astro';

const seo = {
  title: 'Blog | ArtSource Brazil',
  description: 'Articles, guides, and insights for the creative industries in Brazil.',
};

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.isDraft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Layout seo={seo}>
  <main class="container mx-auto max-w-4xl px-container py-12">
    <div class="prose prose-lg mx-auto max-w-none">
      <h1 class="font-serif">Blog</h1>
      <p class="text-xl leading-relaxed text-neutral-600">
        Here you'll find articles, guides, and insights for the creative industries in Brazil.
      </p>
    </div>

    <div class="mt-12 grid gap-8">
      {
        posts.map((post) => (
          <Link href={`/en/blog/${post.slug}`} class="block">
            <Card variant="default" padding="md" class="transition-all hover:shadow-md">
              <h2 class="font-serif text-3xl font-bold text-neutral-900">{post.data.title}</h2>
              <p class="mt-2 text-lg text-neutral-600">{post.data.description}</p>
              <div class="mt-4 text-sm text-neutral-500">
                <time datetime={post.data.publishDate.toISOString()}>
                  {new Intl.DateTimeFormat('en-US', { dateStyle: 'long' }).format(
                    post.data.publishDate,
                  )}
                </time>
              </div>
            </Card>
          </Link>
        ))
      }
    </div>
  </main>
</Layout>

