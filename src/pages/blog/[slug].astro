---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: post,
  }));
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await post.render();

const seo = {
  title: `${post.data.title} | ArtSource Brazil Blog`,
  description: post.data.description,
  image: post.data.heroImage,
};
---

<Layout seo={seo}>
  <main class="container mx-auto max-w-4xl px-6 py-12">
    <article class="prose prose-lg mx-auto max-w-none">
      {post.data.heroImage && <img src={post.data.heroImage} alt="" class="w-full rounded-lg mb-8" />}
      <h1>{post.data.title}</h1>
      <div class="mb-8 text-sm text-gray-500">
        Published on <time datetime={post.data.publishDate.toISOString()}>
          {new Intl.DateTimeFormat('en-US', { dateStyle: 'long' }).format(post.data.publishDate)}
        </time>
      </div>
      <Content />
    </article>
  </main>
</Layout>
