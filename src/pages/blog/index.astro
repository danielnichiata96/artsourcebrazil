---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/ui/Card.astro';
import Link from '../../components/ui/Link.astro';
import { calculateReadingTime, formatReadingTime } from '../../lib/reading-time';

const seo = {
  title: 'Blog | Art Source Brazil',
  description: 'Artigos, guias e insights para as indústrias criativas no Brasil.',
};

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.isDraft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Layout seo={seo}>
  <main class="container mx-auto max-w-4xl px-container py-12">
    <div class="mx-auto max-w-none text-center mb-16">
      <div class="inline-flex items-center gap-2 border-2 border-ink bg-white px-3 py-1 mb-6 shadow-hard-sm">
          <span class="w-2 h-2 rounded-full bg-brazil-green animate-pulse"></span>
          <span class="text-xs font-bold uppercase tracking-widest">Art Source Editorial</span>
      </div>
      <h1 class="font-display text-5xl md:text-6xl font-bold text-ink mb-6">Blog & Insights</h1>
      <p class="text-xl font-medium leading-relaxed text-neutral-600 max-w-2xl mx-auto">
        Artigos, guias e insights para as indústrias criativas no Brasil.
      </p>
    </div>

    <div class="grid gap-8">
      {
        posts.map((post) => {
          const readingTime = calculateReadingTime(post.body);
          const readingTimeText = formatReadingTime(readingTime, 'pt-BR');
          
          return (
            <Link href={`/blog/${post.slug}`} class="block group">
              <div class="flex flex-col md:flex-row border-2 border-ink bg-white shadow-hard transition-all duration-200 hover:shadow-none hover:translate-x-[3px] hover:translate-y-[3px]">
                {/* Optional: Hero Image Thumbnail if available */}
                {post.data.heroImage && (
                  <div class="h-48 md:h-auto md:w-1/3 border-b-2 md:border-b-0 md:border-r-2 border-ink overflow-hidden">
                    <img src={post.data.heroImage} alt="" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105" />
                  </div>
                )}
                
                <div class="flex-1 p-6 md:p-8 flex flex-col justify-between">
                  <div>
                    <div class="flex items-center gap-3 text-xs font-bold uppercase tracking-widest text-neutral-500 mb-3">
                      <time datetime={post.data.publishDate.toISOString()}>
                        {new Intl.DateTimeFormat('pt-BR', { dateStyle: 'long' }).format(
                          post.data.publishDate,
                        )}
                      </time>
                      <span>•</span>
                      <span>{readingTimeText}</span>
                    </div>
                    
                    <h2 class="font-display text-2xl md:text-3xl font-bold text-ink mb-3 group-hover:text-primary transition-colors">
                      {post.data.title}
                    </h2>
                    <p class="text-lg text-neutral-600 leading-relaxed mb-6">
                      {post.data.description}
                    </p>
                  </div>
                  
                  <div class="flex items-center text-sm font-bold uppercase tracking-wide text-primary">
                    Ler artigo →
                  </div>
                </div>
              </div>
            </Link>
          );
        })
      }
    </div>
  </main>
</Layout>
