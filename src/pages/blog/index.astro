---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const seo = {
  title: 'Blog | ArtSource Brazil',
  description: 'Articles, guides, and insights for the creative industries in Brazil.',
};

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.isDraft)
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Layout seo={seo}>
  <main class="container mx-auto max-w-4xl px-6 py-12">
    <div class="prose prose-lg mx-auto max-w-none">
      <h1>Blog</h1>
      <p>
        Here you'll find articles, guides, and insights for the creative industries in Brazil.
      </p>
    </div>

    <div class="mt-12 grid gap-8">
      {
        posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="block rounded-lg border bg-white p-6 shadow-sm transition-all hover:shadow-md">
            <h2 class="text-2xl font-bold text-gray-900">{post.data.title}</h2>
            <p class="mt-2 text-gray-600">{post.data.description}</p>
            <div class="mt-4 text-sm text-gray-500">
              <time datetime={post.data.publishDate.toISOString()}>
                {new Intl.DateTimeFormat('en-US', { dateStyle: 'long' }).format(post.data.publishDate)}
              </time>
            </div>
          </a>
        ))
      }
    </div>
  </main>
</Layout>
