---
import Layout from '../../layouts/Layout.astro';

const seo = {
  title: 'Payment Successful â€” ArtSource Brazil',
  description: 'Your payment was successful. Please submit your job details.',
};
// Safe fallback if env is not set in the current environment or is an empty string
const rawFormUrl = import.meta.env.PUBLIC_JOB_FORM_URL;
const jobFormUrl = typeof rawFormUrl === 'string' && rawFormUrl.trim()
  ? rawFormUrl.trim()
  : 'https://tally.so/r/9qGdD5'; // Direct fallback to your Tally form
---

<Layout seo={seo}>
  <main class="container mx-auto px-6 py-12">
    <div
      class="mx-auto max-w-3xl rounded-xl border border-gray-200 bg-white p-10 text-center shadow-lg"
    >
      <h1 class="mb-4 text-4xl font-bold text-gray-800">Thank You!</h1>
      <p class="mb-2 text-xl text-gray-700">Your payment was successful.</p>
      <p class="mb-8 text-gray-600">
        Please click the button below to submit your job details. Your job post will be reviewed and
        published within 24 hours.
      </p>
      
      <div style="margin-top: 2rem;">
        <a
          href={jobFormUrl}
          target="_blank"
          rel="noopener noreferrer"
          style="display: inline-block; background-color: #2563eb; color: white; padding: 1rem 2rem; border-radius: 0.5rem; text-decoration: none; font-weight: bold; font-size: 1.125rem;"
        >
          Submit Job Details
        </a>
      </div>

      <p class="mt-4 text-sm text-gray-600">
        Or copy and paste this link: <br>
        <a href={jobFormUrl} target="_blank" rel="noopener noreferrer" class="text-blue-600 underline break-all">{jobFormUrl}</a>
      </p>

      <p class="mt-6 text-sm text-gray-500">
        If you have any questions, please contact us at <a href="mailto:support@artsourcebrazil.com" class="text-blue-600 underline hover:text-blue-700"
          >support@artsourcebrazil.com</a
        >.
      </p>
    </div>
  </main>
</Layout>
