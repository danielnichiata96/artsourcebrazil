---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/ui/Card.astro';
import Button from '../../components/ui/Button.astro';
import Link from '../../components/ui/Link.astro';

const seo = {
  title: 'Payment Successful â€” Art Source Brazil',
  description: 'Your payment was successful. Please submit your job details.',
};
// Safe fallback if env is not set in the current environment or is an empty string
const rawFormUrl = import.meta.env.PUBLIC_JOB_FORM_URL;
const jobFormUrl =
  typeof rawFormUrl === 'string' && rawFormUrl.trim()
    ? rawFormUrl.trim()
    : 'https://tally.so/r/9qGdD5'; // Direct fallback to your Tally form
---

<Layout seo={seo} noindex={true}>
  <main class="container mx-auto px-container py-12">
    <Card variant="elevated" padding="lg" class="mx-auto max-w-3xl text-center">
      <h1 class="mb-4 text-4xl font-extrabold text-neutral-900">Thank You!</h1>
      <p class="mb-2 text-xl text-neutral-700">Your payment was successful.</p>
      <p class="mb-8 text-neutral-600">
        Please click the button below to submit your job details. Your job post will be reviewed and
        published within 24 hours.
      </p>

      <Button href={jobFormUrl} target="_blank" rel="noopener noreferrer" size="lg">
        Submit Job Details
      </Button>

      <p class="mt-6 text-sm text-neutral-600">
        If you have any questions, please contact us at <Link
          href="mailto:artsourcebrazil@gmail.com">artsourcebrazil@gmail.com</Link
        >.
      </p>
    </Card>
  </main>
</Layout>
