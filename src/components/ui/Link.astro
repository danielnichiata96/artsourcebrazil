---
export interface Props {
  href: string;
  variant?: 'primary' | 'secondary' | 'muted';
  underline?: boolean;
  class?: string;
  target?: string;
  rel?: string;
}

const {
  href,
  variant = 'primary',
  underline = false,
  class: className = '',
  target,
  rel,
  ...rest
} = Astro.props;

const baseClasses = 'transition-colors';

const variantClasses = {
  primary: 'text-link hover:text-link-hover',
  secondary: 'text-neutral-600 hover:text-link',
  muted: 'text-neutral-500 hover:text-neutral-700',
};

const underlineClass = underline ? 'hover:underline underline-offset-2' : '';

const classes = `${baseClasses} ${variantClasses[variant]} ${underlineClass} ${className}`;
---

<a href={href} target={target} rel={rel} class={classes} {...rest}>
  <slot />
</a>
