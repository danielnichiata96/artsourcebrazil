---
import Button from './Button.astro';
import Link from './Link.astro';
import type { Locale } from '../../lib/i18n';
import { defaultLocale, getMessages } from '../../lib/i18n';

export interface Props {
  locale: Locale;
}

const { locale } = Astro.props as Props;
const messages = getMessages(locale);

const navItems = messages.nav.items;
const ctaText = messages.nav.cta;

// Generate toggle URL based on current path
const currentPath = Astro.url.pathname;
const toggleHref = locale === 'pt-BR' 
  ? (currentPath.startsWith('/en') ? currentPath : `/en${currentPath}`)
  : currentPath.replace(/^\/en/, '') || '/';

const toggleLabel = messages.nav.languageToggle.shortLabel;
const toggleAria = messages.nav.languageToggle.ariaLabel;

const withLocale = (href: string) => {
  if (!href || href.startsWith('#') || href.startsWith('http') || locale === defaultLocale) return href;
  const baseHref = href.startsWith('/') ? href : `/${href}`;
  return locale === 'en' ? `/en${baseHref}` : baseHref;
};

const ctaHref = withLocale('/post-a-job');
---

<header class="sticky top-0 z-50 border-b-2 border-ink bg-paper/90 backdrop-blur-sm">
  <nav class="mx-auto flex h-20 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8" aria-label="Main navigation">
    <!-- Logo -->
    <a href={withLocale('/')} class="flex items-center gap-4 group">
      <div class="h-12 w-12 border-2 border-ink bg-primary text-ink shadow-hard-sm transition-all duration-200 flex items-center justify-center rounded-none group-hover:translate-x-[3px] group-hover:translate-y-[3px]">
        <span class="font-display text-2xl font-bold leading-none">Br</span>
      </div>
      <div class="flex flex-col leading-tight">
        <span class="font-display text-2xl font-bold uppercase tracking-tight text-ink">Art Source</span>
        <span class="text-[0.6rem] font-bold tracking-[0.4em] text-neutral-500 transition-colors group-hover:text-ink">
          BRAZIL EDITION
        </span>
      </div>
    </a>

    <div class="flex items-center gap-4">
      <div class="hidden md:flex items-center gap-6 text-xs sm:text-sm font-semibold uppercase tracking-[0.2em] text-ink">
        {navItems.map((item) => (
          <Link
            href={withLocale(item.href)}
            variant="secondary"
            class="relative text-ink transition-colors hover:text-brazil-blue after:absolute after:-bottom-1 after:left-0 after:h-0.5 after:w-full after:origin-left after:scale-x-0 after:bg-brazil-blue after:transition-transform after:duration-200 hover:after:scale-x-100"
          >
            {item.label}
          </Link>
        ))}
      </div>

      <Button
        href={ctaHref}
        class="rounded-none border-ink bg-ink text-paper shadow-hard hover:bg-brazil-blue hover:text-white"
      >
        {ctaText}
      </Button>

      <a
        href={toggleHref}
        aria-label={toggleAria}
        class="inline-flex h-10 w-10 items-center justify-center border-2 border-ink bg-white text-ink font-display text-xs tracking-widest shadow-hard-sm transition-colors hover:bg-ink hover:text-paper focus:outline-none focus:ring-2 focus:ring-brazil-blue/30"
      >
        {toggleLabel}
      </a>
    </div>
  </nav>
</header>
