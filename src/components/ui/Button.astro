---
export interface Props {
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'sm' | 'md' | 'lg';
  href?: string;
  type?: 'button' | 'submit' | 'reset';
  class?: string;
  target?: string;
  rel?: string;
  id?: string;
  disabled?: boolean;
  [key: string]: any; // Allow any other HTML attributes
}

const {
  variant = 'primary',
  size = 'md',
  href,
  type = 'button',
  class: className = '',
  target,
  rel,
  id,
  disabled,
  ...rest
} = Astro.props;

const baseClasses = 'inline-block font-bold rounded-button transition-all duration-200 ease-out will-change-transform focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 active:scale-98 whitespace-nowrap';

const variantClasses = {
  primary: 'bg-primary text-white border-thick border-neutral-900 shadow-illustration hover:bg-primary-hover',
  secondary: 'bg-accent text-neutral-900 border-thick border-neutral-900 shadow-illustration hover:bg-accent-hover',
  outline: 'border-thick border-neutral-900 bg-white text-neutral-700 hover:bg-primary-light hover:border-primary hover:text-primary shadow-illustration',
  ghost: 'text-neutral-700 hover:text-primary hover:bg-primary-light border-2 border-transparent hover:border-primary',
};

const sizeClasses = {
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-4 py-2.5 text-sm',
  lg: 'px-6 py-3 text-base',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;

const Element = href ? 'a' : 'button';
---

<Element
  href={href}
  type={!href ? type : undefined}
  target={target}
  rel={rel}
  id={id}
  disabled={disabled}
  class={classes}
  {...rest}
>
  <slot />
</Element>
