---
export interface Props {
  variant?: 'default' | 'primary' | 'accent' | 'neutral';
  size?: 'sm' | 'md';
  class?: string;
}

const { variant = 'default', size = 'md', class: className = '', ...rest } = Astro.props;

const baseClasses = 'inline-block font-bold rounded-full border-2 border-neutral-900';

const variantClasses = {
  default: 'bg-neutral-100 text-neutral-900',
  primary: 'bg-primary-light text-primary border-primary',
  accent: 'bg-accent-light text-neutral-900 border-accent',
  neutral: 'bg-neutral-200 text-neutral-900',
};

const sizeClasses = {
  sm: 'px-2 py-1 text-xs',
  md: 'px-3 py-1.5 text-sm',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${sizeClasses[size]} ${className}`;
---

<span class={classes} {...rest}>
  <slot />
</span>
