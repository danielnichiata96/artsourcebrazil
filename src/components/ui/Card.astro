---
export interface Props {
  variant?: 'default' | 'bordered' | 'elevated';
  padding?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { variant = 'default', padding = 'md', class: className = '', ...rest } = Astro.props;

const baseClasses = 'bg-background-paper rounded-lg transition-all duration-300 ease-out';

const variantClasses = {
  default: 'border border-neutral-200 shadow-sm hover:shadow-md hover:-translate-y-0.5',
  bordered: 'border-2 border-neutral-200 hover:border-primary hover:-translate-y-0.5',
  elevated: 'shadow-md hover:shadow-xl hover:-translate-y-1 border border-neutral-100',
};

const paddingClasses = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${paddingClasses[padding]} ${className}`;
---

<div class={classes} {...rest}>
  <slot />
</div>
