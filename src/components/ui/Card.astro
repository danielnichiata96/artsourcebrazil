---
export interface Props {
  variant?: 'default' | 'bordered' | 'elevated';
  padding?: 'sm' | 'md' | 'lg';
  class?: string;
}

const { variant = 'default', padding = 'md', class: className = '', ...rest } = Astro.props;

const baseClasses = 'bg-background-paper rounded-xl';

const variantClasses = {
  default: 'border-thick border-neutral-900 shadow-illustration',
  bordered: 'border-extra-thick border-neutral-900',
  elevated: 'border-thick border-neutral-900 shadow-illustration-hover',
};

const paddingClasses = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const classes = `${baseClasses} ${variantClasses[variant]} ${paddingClasses[padding]} ${className}`;
---

<div class={classes} {...rest}>
  <slot />
</div>
