---
// FiltersSidebar component - Consolidated filtering sidebar
export interface Props {
  categories: string[];
}

const { categories = [] } = Astro.props as Props;

// Map categories to emoji icons
const categoryIcons: Record<string, string> = {
  'Game Dev': 'üéÆ',
  '3D & Animation': 'üé®',
  'Design (UI/UX)': 'üéØ',
};
---

<!-- Mobile Toggle Button -->
<button
  id="filters-toggle"
  type="button"
  class="fixed bottom-6 right-6 z-40 flex items-center gap-2 rounded-full bg-primary px-5 py-3 text-white shadow-lg transition-all hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 lg:hidden"
  aria-label="Toggle filters"
  aria-expanded="false"
>
  <svg
    class="h-5 w-5"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
    />
  </svg>
  <span class="font-semibold">Filters</span>
</button>

<!-- Mobile Overlay -->
<div
  id="filters-overlay"
  class="fixed inset-0 z-30 hidden bg-black/50 backdrop-blur-sm transition-opacity lg:hidden"
  aria-hidden="true"
></div>

<!-- Sidebar -->
<aside
  id="filters-sidebar"
  class="fixed left-0 top-0 z-40 w-80 -translate-x-full transform overflow-y-auto border-r border-neutral-200 bg-background-paper shadow-xl transition-transform duration-300 ease-in-out lg:fixed lg:left-0 lg:top-0 lg:z-0 lg:translate-x-0 lg:shadow-none"
  aria-label="Job filters"
>
  <div class="sticky top-0 z-10 flex items-center justify-between border-b border-neutral-200 bg-background-paper p-4 lg:hidden">
    <h2 class="text-lg font-semibold text-neutral-900">Filters</h2>
    <button
      id="filters-close"
      type="button"
      class="rounded-lg p-2 text-neutral-500 transition-colors hover:bg-neutral-100 hover:text-neutral-900 focus:outline-none focus:ring-2 focus:ring-primary"
      aria-label="Close filters"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        />
      </svg>
    </button>
  </div>

  <div class="p-6 space-y-6">
    <!-- Search Bar -->
    <div>
      <label for="job-search-sidebar" class="mb-2 block text-sm font-semibold text-neutral-900">
        Search
      </label>
      <div class="relative">
        <svg
          class="absolute left-3 top-1/2 h-5 w-5 -translate-y-1/2 text-neutral-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
          />
        </svg>
        <input
          id="job-search-sidebar"
          type="search"
          inputmode="search"
          placeholder="Job title, company, or skill..."
          aria-label="Search jobs"
          class="w-full rounded-lg border-2 border-neutral-200 bg-white py-3 pl-10 pr-4 text-sm transition-all placeholder:text-neutral-400 hover:border-neutral-300 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20"
        />
      </div>
    </div>

    <!-- Category Filters -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">Category</h3>
      <div class="space-y-2">
        <button
          data-category="all"
          class="category-btn-sidebar category-btn-active w-full rounded-lg border-2 border-primary bg-primary px-4 py-2.5 text-left text-sm font-semibold text-white transition-all hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
          aria-pressed="true"
        >
          All Jobs
        </button>
        {categories.map((cat) => {
          const icon = categoryIcons[cat] || 'üìã';
          return (
            <button
              data-category={cat}
              class="category-btn-sidebar w-full rounded-lg border-2 border-neutral-200 bg-white px-4 py-2.5 text-left text-sm font-semibold text-neutral-700 transition-all hover:border-neutral-300 hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
              aria-pressed="false"
            >
              <span class="mr-2" aria-hidden="true">{icon}</span>
              {cat}
            </button>
          );
        })}
      </div>
    </div>

    <hr class="border-neutral-200" />

    <!-- Level Filter -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">üëî Level</h3>
      <div class="space-y-2">
        {['Junior', 'Pleno', 'Senior', 'Lead'].map((level) => (
          <label class="flex items-center gap-2 cursor-pointer">
            <input
              type="checkbox"
              name="level"
              value={level}
              class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
            />
            <span class="text-sm text-neutral-700">{level}</span>
          </label>
        ))}
      </div>
    </div>

    <hr class="border-neutral-200" />

    <!-- Tools Filter -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">üîß Tools</h3>
      <div class="space-y-2">
        {['Figma', 'ZBrush', 'Unity', 'Maya', 'Adobe XD', 'Blender', 'Photoshop', 'Unreal Engine'].map((tool) => (
          <label class="flex items-center gap-2 cursor-pointer">
            <input
              type="checkbox"
              name="tools"
              value={tool}
              class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
            />
            <span class="text-sm text-neutral-700">{tool}</span>
          </label>
        ))}
      </div>
    </div>

    <hr class="border-neutral-200" />

    <!-- Contract Type Filter -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">üìÑ Contract</h3>
      <div class="space-y-2">
        {['CLT', 'PJ', 'Freelance'].map((contract) => (
          <label class="flex items-center gap-2 cursor-pointer">
            <input
              type="checkbox"
              name="contract"
              value={contract}
              class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
            />
            <span class="text-sm text-neutral-700">{contract}</span>
          </label>
        ))}
      </div>
    </div>

    <hr class="border-neutral-200" />

    <!-- Location Filter -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">üåç Location</h3>
      <div class="space-y-2">
        <label class="flex items-center gap-2 cursor-pointer">
          <input
            type="checkbox"
            name="location"
            value="Brazil-Only"
            class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
          />
          <span class="text-sm text-neutral-700">Brazil-Only</span>
        </label>
        <label class="flex items-center gap-2 cursor-pointer">
          <input
            type="checkbox"
            name="location"
            value="Global"
            class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
          />
          <span class="text-sm text-neutral-700">Global</span>
        </label>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col gap-2 pt-4 border-t border-neutral-200">
      <button
        id="clear-filters-sidebar"
        type="button"
        class="w-full rounded-lg border border-neutral-300 px-4 py-2.5 text-sm font-medium text-neutral-700 transition-all hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
      >
        Clear All Filters
      </button>
    </div>
  </div>
</aside>

<script>
  import { FILTER_CONFIG, FALLBACK_NAVBAR_HEIGHT } from '../lib/constants';
  import { validateFilterUpdate, sanitizeStringArray, type PartialFilterState } from '../lib/validation/filter-schema';

  // Type-safe implementation with proper error handling
  const sidebar = document.getElementById('filters-sidebar') as HTMLElement | null;
  const overlay = document.getElementById('filters-overlay') as HTMLElement | null;
  const toggleBtn = document.getElementById('filters-toggle') as HTMLButtonElement | null;
  const closeBtn = document.getElementById('filters-close') as HTMLButtonElement | null;
  const searchInput = document.getElementById('job-search-sidebar') as HTMLInputElement | null;
  const categoryButtons = Array.from(
    document.querySelectorAll<HTMLButtonElement>('.category-btn-sidebar')
  );
  const clearBtn = document.getElementById('clear-filters-sidebar') as HTMLButtonElement | null;

  // Validate critical elements
  if (!sidebar || !overlay || !toggleBtn || !closeBtn || !searchInput || !clearBtn) {
    console.error('[FiltersSidebar] Required elements not found');
  }

  let selectedCategory: string = 'all';

  function dispatchChange(partial: PartialFilterState): void {
    try {
      // Validate before dispatching
      const validatedData = validateFilterUpdate(partial);
      if (!validatedData) {
        console.warn('[FiltersSidebar] Invalid filter data, skipping dispatch');
        return;
      }
      
      window.dispatchEvent(new CustomEvent('jobfilters:change', { detail: validatedData }));
    } catch (error) {
      console.error('[FiltersSidebar] Error dispatching filter change:', error);
    }
  }

  // Calculate navbar height and set sidebar padding-top (desktop only)
  function setSidebarPosition(): void {
    try {
      const navbar = document.querySelector('header');
      if (!navbar) {
        console.warn('[FiltersSidebar] Navbar not found, using default height');
        return;
      }

      if (!sidebar) {
        console.error('[FiltersSidebar] Sidebar not found');
        return;
      }

      const navbarHeight = navbar.offsetHeight;
      if (isNaN(navbarHeight) || navbarHeight <= 0) {
        console.warn('[FiltersSidebar] Invalid navbar height, using default');
        return;
      }

      const isDesktop = window.innerWidth >= FILTER_CONFIG.BREAKPOINTS.DESKTOP;
      
      if (isDesktop) {
        sidebar.style.paddingTop = `${navbarHeight}px`;
        sidebar.style.height = `calc(100vh - ${navbarHeight}px)`;
      } else {
        sidebar.style.paddingTop = '0';
        sidebar.style.height = '100vh';
      }
      
      document.documentElement.style.setProperty('--navbar-height', `${navbarHeight}px`);
    } catch (error) {
      console.error('[FiltersSidebar] Error setting sidebar position:', error);
      // Fallback: use default values
      if (sidebar) {
        sidebar.style.paddingTop = `${FALLBACK_NAVBAR_HEIGHT}px`;
        sidebar.style.height = `calc(100vh - ${FALLBACK_NAVBAR_HEIGHT}px)`;
      }
    }
  }

  // Set position on load and resize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', setSidebarPosition);
  } else {
    setSidebarPosition();
  }
  window.addEventListener('resize', setSidebarPosition);

  function openSidebar(): void {
    if (!sidebar || !overlay || !toggleBtn) return;
    
    sidebar.classList.remove('-translate-x-full');
    overlay.classList.remove('hidden');
    toggleBtn.setAttribute('aria-expanded', 'true');
    document.body.style.overflow = 'hidden';
  }

  function closeSidebar(): void {
    if (!sidebar || !overlay || !toggleBtn) return;
    
    sidebar.classList.add('-translate-x-full');
    overlay.classList.add('hidden');
    toggleBtn.setAttribute('aria-expanded', 'false');
    document.body.style.overflow = '';
  }

  // Toggle sidebar on mobile
  toggleBtn?.addEventListener('click', () => {
    if (!sidebar) return;
    const isOpen = !sidebar.classList.contains('-translate-x-full');
    if (isOpen) {
      closeSidebar();
    } else {
      openSidebar();
    }
  });

  // Close sidebar
  closeBtn?.addEventListener('click', closeSidebar);
  overlay?.addEventListener('click', closeSidebar);

  // Close on ESC key
  document.addEventListener('keydown', (e: KeyboardEvent) => {
    if (!sidebar) return;
    if (e.key === 'Escape' && !sidebar.classList.contains('-translate-x-full')) {
      closeSidebar();
    }
  });

  // Search input handler
  if (searchInput) {
    let timeout: ReturnType<typeof setTimeout> | undefined;
    searchInput.addEventListener('input', () => {
      clearTimeout(timeout);
      timeout = setTimeout(() => {
        dispatchChange({ search: searchInput.value || '' });
      }, FILTER_CONFIG.DEBOUNCE_MS);
    });

    // Sync from global state to input
    window.addEventListener('jobfilters:applied', (e: Event) => {
      const customEvent = e as CustomEvent<PartialFilterState>;
      const detail = customEvent.detail || {};
      if (typeof detail.search === 'string') {
        searchInput.value = detail.search;
      }
    });
  }

  // Category buttons handler
  function updateCategoryUI(): void {
    categoryButtons.forEach((btn) => {
      if (!btn) return;
      const cat = btn.dataset.category || '';
      const isActive = cat === selectedCategory;

      if (isActive) {
        btn.classList.add('category-btn-active', 'bg-primary', 'text-white', 'border-primary');
        btn.classList.remove('bg-white', 'text-neutral-700', 'border-neutral-200');
        btn.setAttribute('aria-pressed', 'true');
      } else {
        btn.classList.remove('category-btn-active', 'bg-primary', 'text-white', 'border-primary');
        btn.classList.add('bg-white', 'text-neutral-700', 'border-neutral-200');
        btn.setAttribute('aria-pressed', 'false');
      }
    });
  }

  categoryButtons.forEach((btn) => {
    if (!btn) return;
    btn.addEventListener('click', () => {
      const cat = btn.dataset.category || 'all';
      selectedCategory = cat;
      updateCategoryUI();
      if (searchInput) searchInput.value = '';
      dispatchChange({ category: selectedCategory, search: '' });
    });
  });

  // Auto-apply filters when checkboxes change
  function applyFilters(): void {
    try {
      if (!sidebar) {
        console.error('[FiltersSidebar] Sidebar not found in applyFilters');
        return;
      }

      const checkboxes = sidebar.querySelectorAll<HTMLInputElement>(
        'input[type="checkbox"]:checked'
      );
      const level: string[] = [];
      const tools: string[] = [];
      const contract: string[] = [];
      const location: string[] = [];

      checkboxes.forEach((el) => {
        if (!el) return;
        const inp = el as HTMLInputElement;
        switch (inp.name) {
          case 'level':
            level.push(inp.value);
            break;
          case 'tools':
            tools.push(inp.value);
            break;
          case 'contract':
            contract.push(inp.value);
            break;
          case 'location':
            location.push(inp.value);
            break;
        }
      });

      // Sanitize arrays before dispatching
      dispatchChange({ 
        level: sanitizeStringArray(level), 
        tools: sanitizeStringArray(tools), 
        contract: sanitizeStringArray(contract), 
        location: sanitizeStringArray(location) 
      });
    } catch (error) {
      console.error('[FiltersSidebar] Error applying filters:', error);
    }
  }

  // Auto-apply on checkbox change
  if (sidebar) {
    const allCheckboxes = sidebar.querySelectorAll<HTMLInputElement>('input[type="checkbox"]');
    allCheckboxes.forEach((checkbox) => {
      if (!checkbox) return;
      checkbox.addEventListener('change', () => {
        applyFilters();
      });
    });
  }

  // Clear filters handler
  clearBtn?.addEventListener('click', () => {
    try {
      if (!sidebar) return;
      
      const checkboxes = sidebar.querySelectorAll<HTMLInputElement>('input[type="checkbox"]');
      checkboxes.forEach((checkbox) => {
        if (checkbox) checkbox.checked = false;
      });
      
      if (searchInput) searchInput.value = '';
      selectedCategory = 'all';
      updateCategoryUI();
      dispatchChange({ 
        search: '', 
        category: 'all', 
        level: [], 
        tools: [], 
        contract: [], 
        location: [] 
      });
    } catch (error) {
      console.error('[FiltersSidebar] Error clearing filters:', error);
    }
  });

  // Sync from global state (except search, handled above)
  window.addEventListener('jobfilters:applied', (e: Event) => {
    try {
      if (!sidebar) return;
      
      const customEvent = e as CustomEvent<PartialFilterState>;
      const detail = customEvent.detail || {};
      
      if (detail.category) {
        selectedCategory = detail.category;
        updateCategoryUI();
      }

      // Sync checkboxes
      const levelCheckboxes = sidebar.querySelectorAll<HTMLInputElement>('input[name="level"]');
      const toolsCheckboxes = sidebar.querySelectorAll<HTMLInputElement>('input[name="tools"]');
      const contractCheckboxes = sidebar.querySelectorAll<HTMLInputElement>('input[name="contract"]');
      const locationCheckboxes = sidebar.querySelectorAll<HTMLInputElement>('input[name="location"]');

      levelCheckboxes.forEach((cb) => {
        if (cb) cb.checked = detail.level?.includes(cb.value) || false;
      });
      toolsCheckboxes.forEach((cb) => {
        if (cb) cb.checked = detail.tools?.includes(cb.value) || false;
      });
      contractCheckboxes.forEach((cb) => {
        if (cb) cb.checked = detail.contract?.includes(cb.value) || false;
      });
      locationCheckboxes.forEach((cb) => {
        if (cb) cb.checked = detail.location?.includes(cb.value) || false;
      });
    } catch (error) {
      console.error('[FiltersSidebar] Error syncing global state:', error);
    }
  });

  // Initial UI sync
  updateCategoryUI();

  // Handle window resize - close mobile sidebar if switching to desktop
  window.addEventListener('resize', () => {
    if (window.innerWidth >= FILTER_CONFIG.BREAKPOINTS.DESKTOP) {
      document.body.style.overflow = '';
    }
  });
</script>

