---
// FiltersSidebar component - Consolidated filtering sidebar
export interface Props {
  categories: string[];
}

const { categories = [] } = Astro.props as Props;

// Map categories to emoji icons
const categoryIcons: Record<string, string> = {
  'Game Dev': 'üéÆ',
  '3D & Animation': 'üé®',
  'Design (UI/UX)': 'üéØ',
};
---

<!-- Mobile Toggle Button -->
<button
  id="filters-toggle"
  type="button"
  class="fixed bottom-6 right-6 z-40 flex items-center gap-2 rounded-full bg-primary px-5 py-3 text-white shadow-lg transition-all hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 lg:hidden"
  aria-label="Toggle filters"
  aria-expanded="false"
>
  <svg
    class="h-5 w-5"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4"
    />
  </svg>
  <span class="font-semibold">Filters</span>
</button>

<!-- Mobile Overlay -->
<div
  id="filters-overlay"
  class="fixed inset-0 z-30 hidden bg-black/50 backdrop-blur-sm transition-opacity lg:hidden"
  aria-hidden="true"
></div>

<!-- Sidebar -->
<aside
  id="filters-sidebar"
  class="fixed left-0 top-0 z-40 w-80 -translate-x-full transform overflow-y-auto border-r border-neutral-200 bg-background-paper shadow-xl transition-transform duration-300 ease-in-out lg:fixed lg:left-0 lg:top-0 lg:z-0 lg:translate-x-0 lg:shadow-none"
  aria-label="Job filters"
>
  <div class="sticky top-0 z-10 flex items-center justify-between border-b border-neutral-200 bg-background-paper p-4 lg:hidden">
    <h2 class="text-lg font-semibold text-neutral-900">Filters</h2>
    <button
      id="filters-close"
      type="button"
      class="rounded-lg p-2 text-neutral-500 transition-colors hover:bg-neutral-100 hover:text-neutral-900 focus:outline-none focus:ring-2 focus:ring-primary"
      aria-label="Close filters"
    >
      <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        />
      </svg>
    </button>
  </div>

  <div class="p-6 space-y-6">
    <!-- Search Bar -->
    <div>
      <label for="job-search-sidebar" class="mb-2 block text-sm font-semibold text-neutral-900">
        Search
      </label>
      <div class="relative">
        <svg
          class="absolute left-3 top-1/2 h-5 w-5 -translate-y-1/2 text-neutral-400"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
          />
        </svg>
        <input
          id="job-search-sidebar"
          type="search"
          inputmode="search"
          placeholder="Job title, company, or skill..."
          aria-label="Search jobs"
          class="w-full rounded-lg border-2 border-neutral-200 bg-white py-3 pl-10 pr-4 text-sm transition-all placeholder:text-neutral-400 hover:border-neutral-300 focus:border-primary focus:outline-none focus:ring-2 focus:ring-primary/20"
        />
      </div>
    </div>

    <!-- Category Filters -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">Category</h3>
      <div class="space-y-2">
        <button
          data-category="all"
          class="category-btn-sidebar category-btn-active w-full rounded-lg border-2 border-primary bg-primary px-4 py-2.5 text-left text-sm font-semibold text-white transition-all hover:bg-primary-hover focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
          aria-pressed="true"
        >
          All Jobs
        </button>
        {categories.map((cat) => {
          const icon = categoryIcons[cat] || 'üìã';
          return (
            <button
              data-category={cat}
              class="category-btn-sidebar w-full rounded-lg border-2 border-neutral-200 bg-white px-4 py-2.5 text-left text-sm font-semibold text-neutral-700 transition-all hover:border-neutral-300 hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
              aria-pressed="false"
            >
              <span class="mr-2" aria-hidden="true">{icon}</span>
              {cat}
            </button>
          );
        })}
      </div>
    </div>

    <hr class="border-neutral-200" />

    <!-- Level Filter -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">üëî Level</h3>
      <div class="space-y-2">
        {['Junior', 'Pleno', 'Senior', 'Lead'].map((level) => (
          <label class="flex items-center gap-2 cursor-pointer">
            <input
              type="checkbox"
              name="level"
              value={level}
              class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
            />
            <span class="text-sm text-neutral-700">{level}</span>
          </label>
        ))}
      </div>
    </div>

    <hr class="border-neutral-200" />

    <!-- Tools Filter -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">üîß Tools</h3>
      <div class="space-y-2">
        {['Figma', 'ZBrush', 'Unity', 'Maya', 'Adobe XD', 'Blender', 'Photoshop', 'Unreal Engine'].map((tool) => (
          <label class="flex items-center gap-2 cursor-pointer">
            <input
              type="checkbox"
              name="tools"
              value={tool}
              class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
            />
            <span class="text-sm text-neutral-700">{tool}</span>
          </label>
        ))}
      </div>
    </div>

    <hr class="border-neutral-200" />

    <!-- Contract Type Filter -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">üìÑ Contract</h3>
      <div class="space-y-2">
        {['CLT', 'PJ', 'Freelance'].map((contract) => (
          <label class="flex items-center gap-2 cursor-pointer">
            <input
              type="checkbox"
              name="contract"
              value={contract}
              class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
            />
            <span class="text-sm text-neutral-700">{contract}</span>
          </label>
        ))}
      </div>
    </div>

    <hr class="border-neutral-200" />

    <!-- Location Filter -->
    <div>
      <h3 class="mb-3 text-sm font-semibold text-neutral-900">üåç Location</h3>
      <div class="space-y-2">
        <label class="flex items-center gap-2 cursor-pointer">
          <input
            type="checkbox"
            name="location"
            value="Brazil-Only"
            class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
          />
          <span class="text-sm text-neutral-700">Brazil-Only</span>
        </label>
        <label class="flex items-center gap-2 cursor-pointer">
          <input
            type="checkbox"
            name="location"
            value="Global"
            class="h-4 w-4 rounded border-neutral-300 text-primary focus:ring-primary"
          />
          <span class="text-sm text-neutral-700">Global</span>
        </label>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="flex flex-col gap-2 pt-4 border-t border-neutral-200">
      <button
        id="clear-filters-sidebar"
        type="button"
        class="w-full rounded-lg border border-neutral-300 px-4 py-2.5 text-sm font-medium text-neutral-700 transition-all hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2"
      >
        Clear All Filters
      </button>
    </div>
  </div>
</aside>

<script>
  import { FiltersSidebarController } from '../lib/filters/sidebar-controller';

  // Gather all required DOM elements
  const sidebar = document.getElementById('filters-sidebar') as HTMLElement;
  const overlay = document.getElementById('filters-overlay') as HTMLElement;
  const toggleBtn = document.getElementById('filters-toggle') as HTMLButtonElement;
  const closeBtn = document.getElementById('filters-close') as HTMLButtonElement;
  const searchInput = document.getElementById('job-search-sidebar') as HTMLInputElement;
  const categoryButtons = Array.from(
    document.querySelectorAll<HTMLButtonElement>('.category-btn-sidebar')
  );
  const clearBtn = document.getElementById('clear-filters-sidebar') as HTMLButtonElement;

  // Checkbox groups
  const levelCheckboxes = Array.from(
    document.querySelectorAll<HTMLInputElement>('input[name="level"]')
  );
  const toolsCheckboxes = Array.from(
    document.querySelectorAll<HTMLInputElement>('input[name="tools"]')
  );
  const contractCheckboxes = Array.from(
    document.querySelectorAll<HTMLInputElement>('input[name="contract"]')
  );
  const locationCheckboxes = Array.from(
    document.querySelectorAll<HTMLInputElement>('input[name="location"]')
  );

  // Initialize controller with all elements
  new FiltersSidebarController({
    sidebar,
    overlay,
    toggleBtn,
    closeBtn,
    searchInput,
    categoryButtons,
    clearBtn,
    checkboxGroups: {
      level: levelCheckboxes,
      tools: toolsCheckboxes,
      contract: contractCheckboxes,
      location: locationCheckboxes,
    },
  });
</script>
