---
import { Image } from 'astro:assets';
import { slugify } from '../lib/jobs';
import Button from './ui/Button.astro';
import Badge from './ui/Badge.astro';
import Card from './ui/Card.astro';
import Link from './ui/Link.astro';

export interface Job {
  id: string;
  companyName: string;
  companyLogo: string;
  jobTitle: string;
  applyLink: string;
  postedDate: string;
  category: string;
  tags: string[];
}

// Accept arbitrary attributes to allow data-* forwarding from parent (for filters)
const { job, ...attrs } = Astro.props as { job: Job } & Record<string, any>;

const formattedDate = (() => {
  try {
    return new Date(job.postedDate).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    });
  } catch {
    return job.postedDate;
  }
})();
---

<Card
  {...attrs}
  class="flex items-start space-x-6 hover:border-primary group"
>
  <Image
    src={job.companyLogo}
    alt={`${job.companyName} logo`}
    width={64}
    height={64}
    loading="lazy"
    class="h-16 w-16 flex-shrink-0 rounded-lg object-cover transition-transform duration-300 group-hover:scale-105"
  />
  <div class="flex-grow">
    <p class="text-sm font-medium text-neutral-600">{job.companyName}</p>
    <h2 class="mt-1 text-2xl font-bold text-neutral-900">
      <Link href={`/jobs/${job.id}-${slugify(job.jobTitle)}`} variant="secondary">
        {job.jobTitle}
      </Link>
    </h2>

    <div class="mt-3 flex items-center text-sm text-neutral-600">
      <Link
        href={`/category/${slugify(job.category)}`}
        variant="secondary"
        underline={true}
      >
        {job.category}
      </Link>
      <span class="mx-2 text-neutral-400">|</span>
      <span>Posted on: {formattedDate}</span>
    </div>

    <div class="mt-4 flex flex-wrap gap-2">
      {
        job.tags.map((tag) => (
          <button
            type="button"
            data-tag={tag}
            class="cursor-pointer rounded-full bg-neutral-100 px-3 py-1 text-xs font-semibold text-neutral-700 transition-all duration-200 ease-out hover:scale-105 hover:bg-accent-light hover:text-neutral-900 hover:shadow-sm active:scale-95 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-white"
            title={`Filter by ${tag}`}
            aria-label={`Filter by ${tag}`}
          >
            {tag}
          </button>
        ))
      }
    </div>
  </div>
  <div class="flex-shrink-0">
    <Button
      href={job.applyLink}
      target="_blank"
      rel="noopener noreferrer"
      size="md"
    >
      Apply Now
    </Button>
  </div>
</Card>
