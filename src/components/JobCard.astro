---
import { slugify } from '../lib/jobs';
export interface Job {
  id: string;
  companyName: string;
  companyLogo: string;
  jobTitle: string;
  applyLink: string;
  postedDate: string;
  category: string;
  tags: string[];
}

// Accept arbitrary attributes to allow data-* forwarding from parent (for filters)
const { job, ...attrs } = Astro.props as { job: Job } & Record<string, any>;

const formattedDate = (() => {
  try {
    return new Date(job.postedDate).toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'long',
      day: 'numeric',
    });
  } catch {
    return job.postedDate;
  }
})();
---

<div
  {...attrs}
  class="flex items-start space-x-6 rounded-xl border border-transparent bg-white p-6 shadow-lg transition-shadow duration-300 hover:border-blue-500 hover:shadow-xl"
>
  <img
    src={job.companyLogo}
    alt={`${job.companyName} logo`}
    class="h-16 w-16 flex-shrink-0 rounded-lg object-cover"
    loading="lazy"
    decoding="async"
  />
  <div class="flex-grow">
    <p class="text-sm text-gray-500">{job.companyName}</p>
    <h2 class="mt-1 text-2xl font-bold text-gray-800">
      <a
        href={job.applyLink}
        target="_blank"
        rel="noopener noreferrer"
        class="transition-colors hover:text-blue-600">{job.jobTitle}</a
      >
    </h2>

    <div class="mt-3 flex items-center text-sm text-gray-500">
      <a href={`/category/${slugify(job.category)}`} class="underline-offset-2 hover:underline hover:text-blue-600" aria-label={`View ${job.category} jobs`}>
        {job.category}
      </a>
      <span class="mx-2">|</span>
      <span>Posted on: {formattedDate}</span>
    </div>

    <div class="mt-4 flex flex-wrap gap-2">
      {
        job.tags.map((tag) => (
          <button
            type="button"
            data-tag={tag}
            class="cursor-pointer rounded-full bg-gray-200 px-3 py-1 text-xs font-semibold text-gray-700 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-white"
            title={`Filter by ${tag}`}
            aria-label={`Filter by ${tag}`}
          >
            {tag}
          </button>
        ))
      }
    </div>
  </div>
  <div class="flex-shrink-0">
    <a
      href={job.applyLink}
      target="_blank"
      rel="noopener noreferrer"
      class="inline-block rounded-lg bg-blue-600 px-6 py-3 font-semibold text-white shadow-md transition-all duration-300 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-white"
    >
      Apply Now
    </a>
  </div>
</div>
