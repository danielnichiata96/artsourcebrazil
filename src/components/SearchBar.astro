---
// SearchBar component - Primary filtering method
import AdvancedFilters from './AdvancedFilters.astro';
---

<div class="mb-8">
  <!-- Large, prominent search input with Advanced Filters -->
  <div class="flex items-start justify-center gap-3">
    <div class="relative w-full max-w-3xl">
      <!-- Search icon -->
      <svg
        class="absolute left-4 top-1/2 h-5 w-5 -translate-y-1/2 text-neutral-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
        />
      </svg>

      <!-- Search input -->
      <input
        id="job-search"
        type="search"
        inputmode="search"
        placeholder="Search by job title, company, or skill..."
        aria-label="Search jobs"
        class="w-full rounded-xl border-2 border-neutral-200 bg-background-paper py-4 pl-12 pr-4 text-lg transition-all duration-200 placeholder:text-neutral-400 hover:border-neutral-300 focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10"
      />
    </div>

    <!-- Advanced Filters Button (ensure higher stacking than category buttons) -->
    <div class="relative z-40 flex-shrink-0">
      <AdvancedFilters />
    </div>
  </div>
</div>

<script>
  // @ts-nocheck
  const searchInput = document.getElementById('job-search');

  function dispatchChange(partial) {
    window.dispatchEvent(new CustomEvent('jobfilters:change', { detail: partial }));
  }

  function init() {
    // Debounced input -> update global filters
    if (searchInput) {
      let to;
      searchInput.addEventListener('input', () => {
        clearTimeout(to);
        to = setTimeout(() => {
          dispatchChange({ search: searchInput.value || '' });
        }, 150);
      });
    }

    // Sync from global state to input
    window.addEventListener('jobfilters:applied', (e) => {
      const detail = /** @type {CustomEvent} */ (e).detail || {};
      if (searchInput && typeof detail.search === 'string') {
        searchInput.value = detail.search;
      }
    });

    // Delegate clicks on tags inside job cards -> quick search
    const container = document.querySelector('[data-jobs]');
    if (container) {
      container.addEventListener('click', (ev) => {
        const target = ev.target;
        if (target && target.hasAttribute && target.hasAttribute('data-tag')) {
          const tagText = target.getAttribute('data-tag') || '';
          if (tagText && searchInput) {
            searchInput.value = tagText;
            dispatchChange({ search: tagText });
            searchInput.focus();
          }
        }
      });
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>
