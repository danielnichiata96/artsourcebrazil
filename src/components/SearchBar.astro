---
// SearchBar component - Primary filtering method
import AdvancedFilters from './AdvancedFilters.astro';
---

<div class="mb-8">
  <!-- Large, prominent search input with Advanced Filters -->
  <div class="flex items-start justify-center gap-3">
    <div class="relative w-full max-w-3xl">
      <!-- Search icon -->
      <svg
        class="absolute left-4 top-1/2 h-5 w-5 -translate-y-1/2 text-neutral-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
        />
      </svg>

      <!-- Search input -->
      <input
        id="job-search"
        type="search"
        inputmode="search"
        placeholder="Search by job title, company, or skill..."
        aria-label="Search jobs"
        class="w-full rounded-xl border-2 border-neutral-200 bg-background-paper py-4 pl-12 pr-4 text-lg transition-all duration-200 placeholder:text-neutral-400 hover:border-neutral-300 focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10"
      />
    </div>

    <!-- Advanced Filters Button (ensure higher stacking than category buttons) -->
    <div class="relative z-0 flex-shrink-0">
      <AdvancedFilters />
    </div>
  </div>
</div>

<script>
  import { FILTER_CONFIG } from '../lib/constants';
  import { validateFilterUpdate, type PartialFilterState } from '../lib/validation/filter-schema';

  const searchInput = document.getElementById('job-search') as HTMLInputElement | null;

  function dispatchChange(partial: PartialFilterState): void {
    try {
      // Validate before dispatching
      const validatedData = validateFilterUpdate(partial);
      if (!validatedData) {
        console.warn('[SearchBar] Invalid filter data, skipping dispatch');
        return;
      }
      
      window.dispatchEvent(new CustomEvent('jobfilters:change', { detail: validatedData }));
    } catch (error) {
      console.error('[SearchBar] Error dispatching change:', error);
    }
  }

  function init(): void {
    try {
      // Debounced input -> update global filters
      if (searchInput) {
        let timeout: ReturnType<typeof setTimeout> | undefined;
        searchInput.addEventListener('input', () => {
          clearTimeout(timeout);
          timeout = setTimeout(() => {
            dispatchChange({ search: searchInput.value || '' });
          }, FILTER_CONFIG.DEBOUNCE_MS);
        });
      }

      // Sync from global state to input
      window.addEventListener('jobfilters:applied', (e: Event) => {
        const customEvent = e as CustomEvent<PartialFilterState>;
        const detail = customEvent.detail || {};
        if (searchInput && typeof detail.search === 'string') {
          searchInput.value = detail.search;
        }
      });

      // Delegate clicks on tags inside job cards -> quick search
      const container = document.querySelector('[data-jobs]');
      if (container) {
        container.addEventListener('click', (ev: Event) => {
          const target = ev.target as HTMLElement;
          if (target && target.hasAttribute && target.hasAttribute('data-tag')) {
            const tagText = target.getAttribute('data-tag') || '';
            if (tagText && searchInput) {
              searchInput.value = tagText;
              dispatchChange({ search: tagText });
              searchInput.focus();
            }
          }
        });
      }
    } catch (error) {
      console.error('[SearchBar] Error initializing:', error);
    }
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>
