---
// SearchBar component - Primary filtering method
import AdvancedFilters from './AdvancedFilters.astro';
---

<div class="mb-8">
  <!-- Large, prominent search input with Advanced Filters -->
  <div class="flex items-center justify-center gap-3">
    <div class="relative w-full max-w-3xl">
      <!-- Search icon -->
      <svg
        class="absolute left-4 top-1/2 h-5 w-5 -translate-y-1/2 text-neutral-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        aria-hidden="true"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
        />
      </svg>

      <!-- Search input -->
      <input
        id="job-search"
        type="search"
        inputmode="search"
        placeholder="Search by job title, company, or skill..."
        aria-label="Search jobs"
        class="w-full rounded-xl border-2 border-neutral-200 bg-background-paper py-4 pl-12 pr-4 text-lg transition-all duration-200 placeholder:text-neutral-400 hover:border-neutral-300 focus:border-primary focus:outline-none focus:ring-4 focus:ring-primary/10"
      />
    </div>

    <!-- Advanced Filters Button -->
    <div class="flex-shrink-0">
      <AdvancedFilters />
    </div>
  </div>
</div>

<script>
  const params = new URLSearchParams(location.search);
  let q = params.get('q') || '';

  const container = document.querySelector('[data-jobs]');
  const items = Array.from(container ? container.children : []);
  const searchInput = document.getElementById('job-search') as HTMLInputElement | null;

  function applyFilters() {
    const qLower = (q || '').toLowerCase();

    items.forEach((el) => {
      const tagsStr = (el.getAttribute('data-tags') || '').toLowerCase();
      const text = (el.getAttribute('data-text') || '').toLowerCase();

      const searchPass = !qLower || text.includes(qLower) || tagsStr.includes(qLower);
      
      el.classList.toggle('hidden', !searchPass);
    });

    // update URL
    if (q) params.set('q', q);
    else params.delete('q');
    const url = `${location.pathname}${params.toString() ? `?${params.toString()}` : ''}`;
    history.replaceState({}, '', url);
  }

  // Search input event
  if (searchInput) {
    searchInput.value = q;
    let to: ReturnType<typeof setTimeout> | undefined;
    searchInput.addEventListener('input', () => {
      clearTimeout(to);
      to = setTimeout(() => {
        q = searchInput.value || '';
        applyFilters();
      }, 150);
    });
  }

  // Delegate clicks on tags inside job cards (for quick search)
  if (container) {
    container.addEventListener('click', (e) => {
      const target = e.target as HTMLElement;
      if (target && target.hasAttribute && target.hasAttribute('data-tag')) {
        const tagText = target.getAttribute('data-tag') || '';
        if (tagText && searchInput) {
          searchInput.value = tagText;
          q = tagText;
          applyFilters();
          searchInput.focus();
        }
      }
    });
  }

  // init on load from URL
  applyFilters();
</script>
