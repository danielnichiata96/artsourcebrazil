    "eslint-plugin-astro": "^1.5.0",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "vitest": "^2.1.9",
    "zod": "^3.25.76"
