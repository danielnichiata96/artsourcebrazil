  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "prebuild": "npm run validate:jobs",
    "preview": "astro preview",
    "astro": "astro",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "validate:jobs": "node scripts/validate-jobs.mjs",
    "sync:airtable": "node scripts/sync-airtable.mjs",
    "sync:validate": "npm run sync:airtable && npm run validate:jobs",
